@using Entities.ViewModels
@model UserViewModel
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Sign.cshtml";
}

<div class="card-title-sign mt-3 text-right">
    <h2 class="title text-uppercase font-weight-bold m-0"><i class="fas fa-user mr-1"></i> Sign In</h2>
</div>
<div class="card-body">
    @using (Html.BeginForm("SignIn", "Home", FormMethod.Post))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group mb-3">
            <label>E-mail Address</label>
            <div class="input-group">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-lg", name = "email", type = "text" })
                <span class="input-group-append">
                    <span class="input-group-text">
                        <i class="fas fa-user"></i>
                    </span>
                </span>
            </div>
        </div>

        <div class="form-group mb-3">
            <div class="clearfix">
                <label class="float-left">Password</label>
                <a href="pages-recover-password.html" class="float-right">Lost Password?</a>
            </div>
            <div class="input-group">
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control form-control-lg", name = "pwd", type = "password" })
                <span class="input-group-append">
                    <span class="input-group-text">
                        <i class="fas fa-lock"></i>
                    </span>
                </span>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-8">
                <div class="checkbox-custom checkbox-default">
                    <input id="RememberMe" name="rememberme" type="checkbox" />
                    <label for="RememberMe">Remember Me</label>
                </div>
            </div>
            <div class="col-sm-4 text-right">
                <button type="submit" class="btn btn-primary mt-2">Sign In</button>
            </div>
        </div>

        <span class="mt-3 mb-3 line-thru text-center text-uppercase">
            <span>or</span>
        </span>

        <div class="mb-1 text-center">
            <a class="btn btn-facebook mb-3 ml-1 mr-1" href="#">Connect with <i class="fab fa-facebook-f"></i></a>
            <a class="btn btn-twitter mb-3 ml-1 mr-1" href="#">Connect with <i class="fab fa-twitter"></i></a>
        </div>

        <p class="text-center">
            Don't have an account yet?
            @Html.ActionLink("Sign Up!", "SignUp", "Home")
        </p>
    }
</div>

